class Solution {
    public int getSum(int a, int b) {
        int c=Math.max(a,b);
        int d=Math.min(a,b);
        while(d!=0) //Think about base case
        {
            if(d>0)  //Think about all possible cases
            {c++;
             d--;
            }
        else
        {
            c--;
            d++;
            
        }
        }
        return c;
    }
}
